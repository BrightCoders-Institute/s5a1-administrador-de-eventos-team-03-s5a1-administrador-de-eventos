<div class="event-list-container">
  <div>
    <%= link_to new_bright_event_path , class: 'btn btn-warning' do %>
      <i class="uil uil-plus"></i>
      <span>Agregar evento</span>
    <% end %>
  </div>
  <div class="table-container">
    <table>
      <tr>
        <% t( :events, scope: %w[table_headers] ).each do |item, value| %>
          <th><%= value %></th>
        <% end %>
      </tr>
      <% @events.each do |event|%>
        <tr>
          <td>
            <%= event.title %>
          </td>
          <td>
            <%= event.description %>
          </td>
          <td>
            <%= event.date %>
          </td>
          <td>
            <%= event.location %>
          </td>
          <td>
            <%= event.cost %>
          </td>
          <td>
            <%= event.privacy ? 'Privado' : 'PÃºblico' %>
          </td>
          <td>
            <% if event&.image.attached? %>
              <%= image_tag event.image %>
            <% else %>
              <p>No hay imagen</p>
            <% end %>
          </td>
        </tr>
      <% end %>      
    </table>
  </div>
</div>
