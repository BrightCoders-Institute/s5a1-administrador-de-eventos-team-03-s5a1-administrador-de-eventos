<div class='filter' data-controller="date-picker">
  <h3>Filtros</h3>
  <%= form_tag(filters_action, method: :get) do %>
    <div class="form-group">
      <%= label_tag 'privacy', 'Privacidad: ' %>
      <%= select_tag 'privacy',
                options_for_select([['Todos', 'Todos'], ['PÃºblico', false], ['Privado', true]],
                                    params[:privacy]),
                  class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag 'date_from', 'De:' %>
      <%= date_field_tag :date_from, params[:date_from], class: 'form-control', 'data-date-picker-target': 'dateFrom', 'data-action': 'change->date-picker#updateMinDate' %>
    </div>

    <div class="form-group">
      <%= label_tag 'date_to', 'A:' %>
      <%= date_field_tag :date_to, params[:date_to], class: 'form-control', 'data-date-picker-target': 'dateTo' %>
    </div>
    <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
  <% end %>
</div>
